page{
  width: 100%;
  height: 100%;
}
.container{
  display: flex;
  align-items: center;
  flex-direction: column;
  height: 100%;
}
.background{
width: 100%;
height: 100%;
position:fixed; 
background-size:100% 100%;
z-index: -1;
}
.container .upbox{
  display: flex;
  width:100%;
  height: 10%;
}

.container .downbox{
  display: flex;
  width: 100%;
  height:90%;
}

.container .downbox .box1{
  flex:1;
}

.container .downbox .box1 .whitebox
{
  display: flex;
  width: 100%;
  height: auto;
  padding-top: 5%;
  padding-bottom: 5%;
  background-color: white;
  background:rgba(252, 252, 252, 0.5);
}

.container .downbox .box1 .whitebox .font{
  display: flex;
  width: 100%;
  height: auto;
  opacity: 1;
  font-family: STKaiti;
}