<view class="flex-container">
  <view class="flex-item" wx:for="{{len}}">
    <view class="flex-next" >
      <image wx:if="{{index==0}}" mode="aspectFit" src="https://i.loli.net/2020/11/04/o4kMgl2ViAQLb1d.png"  bindtap="click" data-index="{{index}}"></image>
