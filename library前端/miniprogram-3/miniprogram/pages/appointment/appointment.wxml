    </view>
    <view class="flex-next02"  bindtap="click" data-index="{{index}}">
      <view class="border-setting">
      <view class="textsetting">
        <view>预约时间: {{seat[index][0]}}
          <view>{{seat[index][1]}}
            <view>楼层：{{seat[index][2]}} {{name_floor[index]}}
              <view>座位号：{{seat[index][3]}}</view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

