page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}

.container .flexbox1 {
  display: flex;
  height: 13%;
  width: 100%;
}

.box1 {
  display: flex;
  position: absolute;
  background-color: black;
  margin-top: 5%;
  width: 67%;
  height: 7%;
  align-items: center;
  justify-content: center;
  margin-left: 3%;
}

.head_font {
  font-size: 35rpx;
  padding: 1%;
  color: whitesmoke;
  font-family: STXinwei;
  font-weight: 400;
}

.container .flexbox2 {
  display: flex;
  height: 37%;
  width: 100%;
}

.box2 {
  display: flex;
  position: absolute;
  right: 0;
  background-color: black;
  margin-right: 2%;
  margin-top: 25%;
  width: 50%;
  height: 18%;
  align-items: center;
  justify-content: center;
}

.body_font {
  margin-left: 2%;
  position: absolute;
  font-size: 35rpx;
  color: #fff;
  font-weight: 550;
  font-family: STKaiti;
}

.container .flexbox3 {
  display: flex;
  height: 50%;
  width: 100%;
}

.box_tip {
  display: flex;
  position: absolute;
  font-size: 30rpx;
  width: 100%;
  padding: 1%;
  align-items: center;
  justify-content: space-between;
}

.box_tip_under {
  display: flex;
  position: absolute;
  margin-top: 57%;
  font-size: 30rpx;
  width: 100%;
  padding: 1%;
  align-items: center;
  justify-content: space-between;
}

.tip_left {
  font-family: STKaiti;
  text-shadow: 1px 2px 3px #000;
  padding-left: 4%;
}

.tip_right {
  font-family: STKaiti;
  text-shadow: 1px 2px 3px #000;
  padding-right: 4%;
}

.box_bu {
  display: flex;
  position: absolute;
  justify-content: space-between;
  margin-top: 6%;
  width: 100%;
  height: 5%;
}

.box_bu_under {
  display: flex;
  position: absolute;
  justify-content: space-between;
  margin-top: 62%;
  width: 100%;
  height: 6%;
}

.bu_left {
  display: flex;
  font-weight: 600;
  line-height: 30rpx;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
  width: auto;
  height: 100%;
  background: rgba(0, 0, 0, 0);
  border: 0px;
  margin-left: 5%;
}

.bu_right {
  display: flex;
  font-weight: 600;
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
  width: auto;
  height: 100%;
  background: rgba(0, 0, 0, 0);
  border: 0px;
  margin-right: 5%;
}

.mid_tip{
  display: flex;
  position: absolute;
  justify-content: space-between;
  padding-top: 3%;
  margin-top: 12%;
  width: 100%;
  height: 5%;
}

.mid_left {
  font-family: STKaiti;
  padding-left: 5%;
  font-weight: 600;
}

.mid_right {
  font-family: STKaiti;
  padding-right: 5%;
  font-weight: 600;
}


.suc {
  display: flex;
  position: absolute;
  margin-top: 22%;
  height: 20%;
  width: 100%;
  justify-content:space-between;
  align-items: center;
}

.showtimebox{
  display: flex;
  margin-left: 5%;
  height: 70%;
  width:25%;
}

.showtime{
  display: flex;
  flex-direction: column;
  height: 100%;
  width:100%;
  justify-content:space-between;
  align-self: center;
}

.showtime_item{
  width: auto;
  height: 33%;
  font-size: 16px;
}

.showfloorbox{
  display: flex;
  margin-right: 3%;
  height: 70%;
  width:27%;
}

.showfloor{
  display: flex;
  flex-direction: column;
  height: 100%;
  width:100%;
  justify-content:space-between;
  align-self: center;
}

.showfloor_item{
  width: auto;
  height: 33%;
  font-size: 16px;
}

.yuan {
  display: flex;
  width: 240rpx;
  height: 240rpx;
  border-radius: 300rpx;
  background-color: #EFDCDF;
  align-items: center;
  justify-content: center;
}

.suc_yuan {
  font-family: STKaiti;
  text-align: center;
  font-size: 65rpx;
  font-weight: 550;
  color: #000;
}

/* 遮罩层 */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}

/* 全部引用 */

/* 弹出层 */
.modalDlg {
  width: 100%;
  height: 50%;
  position: fixed;
  bottom: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modaltitle {
  display: flex;
  width: 100%;
  height: 15%;
  justify-content: space-between;
  align-self: center;
}

.modalbtn_confirm {
  display: flex;
  font-weight: 600;
  line-height: 30rpx;
  font-size: 30rpx;
  width: 50%;
  height: 100%;
  background-color: white;
  align-items: center;
  justify-content: center;
  border: 0px;
  font-size: medium;
  color: #00B26A;
}

.modalbtn_cancel {
  display: flex;
  font-weight: 600;
  line-height: 30rpx;
  font-size: 30rpx;
  width: 50%;
  height: 100%;
  background-color: white;
  align-items: center;
  justify-content: center;
  border: 0px;
  font-size: medium;
}

.modalcheck {
  display: flex;
  padding-top: 5px;
  padding-bottom: 5px;
  height: 100%;
  width: 73%;
  flex-direction: column;
  justify-content: space-around;
  align-content: center;
}

.label_de {
  display: flex;
  width: 100%;
  height: 100%;
  align-self: center;
  justify-content: center;
  font-size: 20px;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}

.box {
  display: flex;
}
