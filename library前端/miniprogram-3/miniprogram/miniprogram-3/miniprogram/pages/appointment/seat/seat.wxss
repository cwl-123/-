page{
  height: 100%;
}

.flex-container{
  width: 800rpx;
  height: auto;
  background-color: aliceblue;
}


.flex-container .item1{
  height: 25vh;
}


.flex-container .flex-item2{
  display: flex;
  flex-direction: row;
  width: 750rpx;
  height: 25vh;
  font-size: x-small;
}

.flex-container .flex-item2 .box1{
  flex:1;
  text-align: center;
}
.flex-container .flex-item2 .box1 .minibox{
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 28rpx;
  align-items: center;
  border: 4rpx solid rgb(198, 192, 192);
  background-color:white;
  box-shadow: 3rpx 5rpx 5rpx #888888;
  width: 350rpx;
  height: 11vh;
  margin-bottom: 10rpx;
  margin-left: 15rpx;
}

