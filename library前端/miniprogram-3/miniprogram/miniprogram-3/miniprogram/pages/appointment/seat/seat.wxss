.flex-container .flex-item3{
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  height: 50vh;
}

.flex-container .flex-item3 .image-parent{
  position: relative;
  width: 750rpx;
  height: 50vh;
}

.flex-container .flex-item3 .image-parent .child{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 350rpx;
  height: 90rpx; 
  position: absolute;
  left: 0;
